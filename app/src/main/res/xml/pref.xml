<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/pref_category_function">
        <SwitchPreference android:key="pref_auto_setting"
            android:title="@string/pref_auto_setting"
            android:defaultValue="true"/>
        <SwitchPreference android:key="enable_full_keyboard"
            android:title="@string/pref_enable_ipv6"
            android:defaultValue="false"/>
        <SwitchPreference android:key="pref_dns_monitor"
            android:title="@string/pref_dnsmonitor"
            android:defaultValue="true"/>
        <PreferenceScreen android:title="@string/pref_mode">
            <ListPreference
                android:key="mode"
                android:title="@string/pref_mode"
                android:defaultValue="PROP"
                android:entries="@array/mode"
                android:entryValues="@array/mode_values" />
            <PreferenceCategory android:title="@string/category_prop_setting">
                <CheckBoxPreference android:key="checkprop"
                    android:defaultValue="true"
                    android:title="@string/pref_misc_checkprop"
                    android:summary="@string/pref_misc_checkprop_summary"
                    />
            </PreferenceCategory>
            <PreferenceCategory android:title="@string/category_ndc_setting">
                <PreferenceScreen android:title="@string/pref_ndc">
                    <io.github.otakuchiyan.dnsman.InterfacePreference
                        android:key="pref_ndc_wlan"
                        android:title="@string/pref_ndc_wlan" />
                    <io.github.otakuchiyan.dnsman.InterfacePreference
                        android:key="pref_ndc_rmnet"
                        android:title="@string/pref_ndc_rmnet" />
                    <io.github.otakuchiyan.dnsman.InterfacePreference
                        android:key="pref_ndc_bt"
                        android:title="@string/pref_ndc_bt" />
                    <io.github.otakuchiyan.dnsman.InterfacePreference
                        android:key="pref_ndc_eth"
                        android:title="@string/pref_ndc_eth" />
                </PreferenceScreen>
            </PreferenceCategory>
            <PreferenceCategory android:title="@string/category_about_mode">
                <Preference android:title="@string/pref_mode_prop"
                    android:summary="@string/pref_mode_prop_summary"/>
                <Preference android:title="@string/pref_mode_iptables"
                    android:summary="@string/pref_mode_iptables_summary"/>
                <Preference android:title="@string/pref_mode_ndc"
                    android:summary="@string/pref_mode_ndc_summary"/>
                <Preference android:title="@string/pref_mode_vpn"
                    android:summary="@string/pref_mode_vpn_summary"/>
            </PreferenceCategory>
        </PreferenceScreen>
        <EditTextPreference
            android:key="config_path"
            android:defaultValue="/etc/resolv.conf"
            android:title="@string/pref_config"
            />
        <Preference android:title="@string/pref_dns_list">
            <intent android:action="io.github.otakuchiyan.dnsman.DNSListActivity"/>
        </Preference>
        <PreferenceScreen android:title="@string/pref_misc">
            <CheckBoxPreference android:key="autoflush"
                android:defaultValue="true"
                android:title="@string/pref_misc_autoflush"
                android:summary="@string/pref_misc_autoflush_summary"
                />
        </PreferenceScreen>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_appearance">
        <ListPreference
          android:key="toast"
          android:title="@string/pref_toast"
          android:defaultValue="0"
            android:entries="@array/toast"
            android:entryValues="@array/toast_values"
            />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/pref_category_about">
        <io.github.otakuchiyan.dnsman.AppVersionPreference />
        <Preference android:title="@string/license"
                android:summary="@string/license_summary">
                <intent android:action="android.intent.action.VIEW"
			android:data="https://www.gnu.org/licenses/gpl.html"
                />
        </Preference>
        <Preference android:title="@string/opensource"
                android:summary="@string/opensource_summary">
                <intent android:action="android.intent.action.VIEW"
                android:data="https://github.com/otakuchiyan/DNSman"
                />
        </Preference>
        <Preference android:title="@string/pref_usage"
            android:summary="@string/pref_usage_summary">
            <intent android:action="android.intent.action.VIEW"
                android:data="https://github.com/otakuchiyan/DNSman/wiki"
                />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
